<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_child_main_layout"
    android:background="@drawable/selector_function_grid_view_item_bg">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/item_icon_iv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/ic_function_item_test"/>

            <TextView
                android:id="@+id/item_name_tv"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333"
                android:text="上班打卡"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:gravity="center"/>
        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/tem_unread_red_point_hint_tv"-->
<!--            style="@style/FunctionUnreadCountHintTVStyle"-->
<!--            android:layout_marginRight="7.5dp"-->
<!--            android:layout_marginTop="7.5dp"/>-->

        <TextView
            android:id="@+id/item_unread_count_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/ic_function_unread_count_img"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize8"
            android:visibility="visible"/>
</FrameLayout>
